<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "MJ Blog" %></title>
  <!-- 
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults %> -->

    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag "application.js" %>

    

  
 
    <%= csrf_meta_tags %>
     <%= stylesheet_link_tag "application", :media => "all" %>
     <%= favicon_link_tag '/assets/mj_favicon.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144' %>
     <%= favicon_link_tag '/assets/mj_favicon.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114' %>
     <%= favicon_link_tag '/assets/mj_favicon.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72' %>
     <%= favicon_link_tag '/assets/mj_favicon.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png' %>
     <%= favicon_link_tag '/assets/mj_favicon.png', :rel => 'shortcut icon' %>
    <%= yield(:head) %>

    <script type="text/javascript" src = "http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" ></script>

     <script type="text/javascript" src = "/assets/jquery.bpopup-0.9.0.min.js" ></script>
  </head>
  <body>

  <div id="header">
      <div id="logo">
        <%= link_to (image_tag("logo.jpeg", :alt => "MJ Blog", :style => "width:250px;height:100px;") ), root_url  %>
      </div>
     <% if current_user %>
         <div id="top_links_container">
            <%= link_to "logout", logout_path, :style => "font-size:16px;" %>
         </div>  
         <div id="top_links_container" style="font-size:16px;color:black;">
             logged in as <%= current_user.username %>       
         </div>  
         <div id="top_links_container">
             <%= link_to "Profile" , user_flits_path(current_user.username)  ,  :style => "font-size:16px;" %>
         </div>
         <div id="top_links_container"> 
            <%= link_to "Home", root_url,  :style => "font-size:16px;"  %>
         </div>
     <% else %>
         <div id="top_links_container">
            <%= link_to "login", login_path , :style => "font-size:16px;"%>
          </div>
     <% end %>
<div class="clear"> </div>



    


    </div>
    <div class ="clear"></div>
    <div id="container">
      <div id ="main" >
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>

    <div id ="side">
      <% if current_user %>
          <%= render :partial => "/includes/side_contents" %>
      <% end %>


      <script type="text/javascript">
        calendar();
      </script>
    </div>
    <div class ="clear"></div>
    </div>
  </body>
</html>

 

    

  